<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://ch.qos.logback/xml/ns/logback"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ch.qos.logback/xml/ns/logback 
               http://ch.qos.logback/xml/ns/logback/logback.xsd">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger -- %msg%n</pattern>
            <!--
            BEWARE OF THE EXTRA SPACE BETWEEEN THE TWO DASHES
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - - %msg%n</pattern> 
            -->
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    
    <logger name="hiconic" level="DEBUG"/>
    <logger name="com.braintribe" level="DEBUG"/>
    <logger name="tribefire" level="DEBUG"/>
    <logger name="dev.hiconic" level="DEBUG"/>

</configuration>
